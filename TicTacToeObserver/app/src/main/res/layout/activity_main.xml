<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >
    <Button
        android:id="@+id/btnReset"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@color/btnNewGame"
        android:text="@string/newGame"
        />
    <TextView
        android:id="@+id/turno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTurno"
        android:layout_gravity="center"/>
    <GridLayout
        android:id="@+id/tblId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        >
            <Button
                android:id="@+id/btn00"
                android:gravity="center"
                android:padding="3dp"
                android:layout_column="0"
                android:layout_row="0"
                android:onClick="onClick"

                />
            <Button
                android:id="@+id/btn01"
                android:gravity="center"
                android:padding="3dp"
                android:layout_column="1"
                android:layout_row="0"
                android:onClick="onClick"
                />
            <Button
                android:id="@+id/btn02"
                android:gravity="center"
                android:padding="3dp"
                android:layout_column="2"
                android:layout_row="0"
                android:onClick="onClick"
                />
            <Button
                android:id="@+id/btn10"
                android:gravity="center"
                android:padding="3dp"
                android:layout_column="0"
                android:layout_row="1"
                android:onClick="onClick"
                />
            <Button
                android:id="@+id/btn11"
                android:gravity="center"
                android:padding="3dp"
                android:layout_column="1"
                android:layout_row="1"
                android:onClick="onClick"
                />
            <Button
                android:id="@+id/btn12"
                android:gravity="center"
                android:padding="3dp"
                android:layout_column="2"
                android:layout_row="1"
                android:onClick="onClick"
                />
            <Button
                android:id="@+id/btn20"
                android:gravity="center"
                android:padding="3dp"
                android:layout_column="0"
                android:layout_row="2"
                android:onClick="onClick"
                />
            <Button
                android:id="@+id/btn21"
                android:gravity="center"
                android:padding="3dp"
                android:layout_column="1"
                android:layout_row="2"
                android:onClick="onClick"
                />
            <Button
                android:id="@+id/btn22"
                android:gravity="center"
                android:padding="3dp"
                android:layout_column="2"
                android:layout_row="2"
                android:onClick="onClick"
                />
    </GridLayout>
    <TextView
        android:id="@+id/risultatiG1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/risG1"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/risultatiG2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/risG2"
        android:layout_gravity="center"/>
</LinearLayout>