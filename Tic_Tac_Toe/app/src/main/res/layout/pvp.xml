<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/label_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/lbl_giocatore1"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_p1"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txt_p1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/hint_giocatore"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/label_p1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/lbl_giocatore2"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_p2"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txt_p2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/hint_giocatore"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/label_p2"
        app:layout_constraintTop_toBottomOf="@+id/txt_p1" />
</android.support.constraint.ConstraintLayout>