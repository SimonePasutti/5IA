<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tris.manuel.Computer"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/testoComputer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/turno"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/sfondo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/sfondo" />

    <GridLayout
        android:id="@+id/glComputer"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:columnCount="3"
        android:rowCount="3">

        <Button
            android:id="@+id/b00"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@android:color/transparent"
            android:onClick="bottone" />

        <Button
            android:id="@+id/b01"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="0"
            android:background="@android:color/transparent"
            android:onClick="bottone" />

        <Button
            android:id="@+id/b02"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_row="0"
            android:background="@android:color/transparent"
            android:onClick="bottone" />

        <Button
            android:id="@+id/b10"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@android:color/transparent"
            android:onClick="bottone" />

        <Button
            android:id="@+id/b11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="1"
            android:background="@android:color/transparent"
            android:onClick="bottone" />

        <Button
            android:id="@+id/b12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_row="1"
            android:background="@android:color/transparent"
            android:onClick="bottone" />

        <Button
            android:id="@+id/b20"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="2"
            android:background="@android:color/transparent"
            android:onClick="bottone" />

        <Button
            android:id="@+id/b21"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="2"
            android:background="@android:color/transparent"
            android:onClick="bottone" />

        <Button
            android:id="@+id/b22"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_row="2"
            android:background="@android:color/transparent"
            android:onClick="bottone" />
    </GridLayout>

    <Button
        android:id="@+id/restartButtonComputer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@+id/sfondo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:onClick="restartButton"
        android:background="@color/yellow"
        android:text="@string/restartButton" />

</RelativeLayout>
